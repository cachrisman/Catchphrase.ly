<% include partials/head_phrase %>

<% include partials/header %>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Edit Word</h4>
            </div>
            <form id="update-form">
            <div class="modal-body">
                <div class="input-group">
                    <span class="input-group-addon" id="word_">Word</span>
                    <input name="word" type="text" class="form-control" aria-describedby="word_" id="word">
                </div>
                <br>
                <div class="input-group">
                    <span class="input-group-addon" id="definition_">Definition</span>
                    <textarea name="definition" class="form-control" rows="5" aria-describedby="definition_" id="definition"></textarea>
                </div>
                <br>
                <input type="hidden" id="id" data-id="">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
            </form>
        </div>
    </div>
</div>

<div id="page-wrapper" class="well">
    <!-- header -->
    <header class="page-header">
        <h1>catchphrasely.herokuapp.com</h1>
    </header>
    <form id="add-form" class="form-inline">
        <div class="btn-group" style="display: inline-block; padding-right: 20px;">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false" style="width: 150px">
                Choose Deck<span class="pull-right caret" style="margin-top: 8px;"></span>
            </button>
            <ul class="dropdown-menu" role="menu" id="deck-list">
            </ul>
        </div>
        <input name="word" type="text" class="form-control" id="new-word" placeholder="Word" style="width: 10%">
        <input name="definition" type="text" class="form-control" id="new-definition" placeholder="Definition" style="width: 50%">
        <button type="submit" class="btn btn-default">Add Word</button>
    </form>
    <br>
    <!-- all phrases! -->
    <ul class="list-group" id="phrases-ul">
    </ul>
</div>

